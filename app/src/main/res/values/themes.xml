<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SocialNetwork" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_acct</item>
        <item name="colorOnPrimary">@color/gray_bg</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_bg</item>
    </style>

    <style name="Theme.SocialNetwork.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SocialNetwork.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SocialNetwork.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>